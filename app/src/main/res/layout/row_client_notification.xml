<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/container_Ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@drawable/shape_my_request"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp">


    <ImageView
        android:id="@+id/request_img"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:src="@drawable/notification"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="100"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_5sdp">

        <TextView
            android:id="@+id/mechanicName_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mechanic_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/description_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_offer"
            android:textColor="@color/white"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:id="@+id/time_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/am_11_30"
            android:textColor="@color/white"
            android:textSize="@dimen/_7ssp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/recy_pin"
            android:layout_marginRight="@dimen/_3sdp" />

        <ImageView
            android:id="@+id/go_Iv"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/green_arrow" />
    </LinearLayout>


</LinearLayout>
